{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "sourceMap": true,
      "types": ["playwright/test", "node"],
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "@hooks/*": ["hooks/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "hooks/**/*.ts",
      "playwright.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
  